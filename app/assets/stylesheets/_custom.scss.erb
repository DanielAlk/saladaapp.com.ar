.c-danger { color: $brand-danger; }

.round-200 { width: 200px; height: 200px; border-radius: 50%; }

.navbar-brand-text { font-size: 16px; vertical-align: bottom; }

table.table-controls tbody>tr>td:last-child { text-align: right; }

#page-wrapper form { @extend .form-horizontal }

.notification { padding: 15px; margin-bottom: 20px; border: 1px solid transparent; border-radius: 4px; position: absolute; top: 0; right: 0; z-index: 9999999999; margin: 10px;
	&.notice { color: #3c763d; background-color: #dff0d8; border-color: #d6e9c6; }
	&.alert { color: #a94442; background-color: #f2dede; border-color: #ebccd1; }
}

.panel-app { position: absolute; height: 100%; margin: 0; text-align: center;
	.panel-footer { position: absolute; width: 100%; bottom: 0; }
	.panel-body {
		table { margin: 30px 0; }
	}
}

.overflow-hidden { overflow:hidden!important; }
body>div.loader { position: fixed; width: 100%; height: 100%; background-color: rgba(0,0,0,0.8); top: 0; left: 0; background-repeat: no-repeat; background-position: center center; background-size: 80px 80px; z-index: 999999999999; background-image: url('<%= asset_path 'loader.gif' %>');
	&:after {content: 'Cargandoâ€¦';color: #ccc;display: block;text-align: center;position: absolute;width: 100%;top: calc(50% + 60px);}
}