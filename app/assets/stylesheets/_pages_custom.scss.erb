@import url('https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i');

@mixin transition($property, $duration, $function) {
	-webkit-transition: $property $duration $function;
	-moz-transition: $property $duration $function;
	-ms-transition: $property $duration $function;
	-o-transition: $property $duration $function;
	transition: $property $duration $function;
}

body { font-family: 'Roboto', sans-serif; }

.vertical-align { display: table; height: inherit;
	&>.middle { display: table-cell; vertical-align: middle; }
}

.relative { position: relative; }
.cover { background-size: cover; background-position: center center; }

.h-xs-40 { height: 40px; }
.h-xs-640 { height: 640px; }
.h-xs-700 { height: 700px; }
@media(min-width: $screen-md-min) {
	.h-md-700 { height: 700px; }
}

.mt-xs-20 { margin-top: 20px; }
.mt-xs-40 { margin-top: 40px; }
.mb-xs-20 { margin-bottom: 20px; }
.mb-xs-40 { margin-bottom: 40px; }
@media(min-width: $screen-md-min) {
	.mt-md-40 { margin-top: 40px; }
	.mb-md-40 { margin-bottom: 40px; }
}

.pt-xs-70 { padding-top: 70px; }
.pt-xs-130 { padding-top: 130px; }

.ptb-xs-130 { padding-top: 130px; padding-bottom: 130px; }

.img-w-xs-70 { width: 70%; height: auto; }
.img-w-xs-90 { width: 90%; height: auto; }
@media(min-width: $screen-md-min) {
	.img-w-md-70 { width: 70%; height: auto; }
}

.row-sp-5 { margin-left: -5px; margin-right: -5px;
	&>div { padding-left: 5px; padding-right: 5px; }
}

.text-bold { font-weight: 500; }
.c-white { color: #FFF; }

.bg-light-grey { background-color: #e0e0e0; }
.bg-orange { background-color: #fd9847; }

.bgi-packs { background-image: url(<%= asset_path 'bg-packs.jpg' %>); }
.bgi-blog { background-image: url(<%= asset_path 'bg-blog.jpg' %>); }

.btn, .form-control { border: none; }
textarea { resize: none; }
.btn-lg { padding: 15px 60px; font-size: 22px; }

.radio { font-size: 20px; color: #FFF; margin-top: 20px; margin-bottom: 20px;
	@media(max-width: $screen-sm-max) { font-size: 16px; margin-top: 15px; margin-bottom: 15px; }
	label { font-weight: 300; position: relative; padding-left: 35px;
		@media(max-width: $screen-sm-max) { padding-left: 25px; }
	}
}
.radio-inline {
	&>input { display: none; }
	&:before { content: ' ';display: inline-block;position: absolute;left: 0;top: 5px;width: 18px;height: 18px;background-color: #FFF;border-radius: 50%;
		@media(max-width: $screen-sm-max) { top: 4px; width: 14px; height: 14px; }
	}
	&.active:after {content: ' ';display: inline-block;position: absolute;left: 2px;top: 7px;width: 14px;height: 14px;background-color: #fd9847;border-radius: 50%;
		@media(max-width: $screen-sm-max) { top: 6px; width: 10px; height: 10px; }
	}
	&+.radio-inline { margin-left: 25px; }
}

form.form-lg {
	.btn { padding: 7px 30px; }
	@media(min-width: $screen-md-min) {
		.form-control { height: 46px; padding: 10px 16px; font-size: 18px; line-height: 1.3333333; border-radius: 0; }
		textarea.form-control { height: auto; }
		.btn { padding: 15px 60px; font-size: 22px; line-height: 1.3333333; border-radius: 0; }
	}
}

header { position: absolute; background-color: rgba(0, 0, 0, 0.5); width: 100%; padding: 15px 0; z-index: 99;
	.brand { float: left;
		img { height: 40px; }
	}
	@media(max-width: $screen-xs-max) {
		nav.app-nav { display: none; }
	}
}
nav.app-nav { float: right; font-size: 12px;
	ul { margin: 0;
		li { padding-left: 25px; padding-right: 25px;
			@media(max-width: $screen-sm-max) { padding-left: 12px; padding-right: 12px; }
		}
		a { color: #FFF;
			&:focus { text-decoration: none; outline: none; }
			&:hover, &:focus { text-decoration: none; }
			&:hover { text-decoration: underline; color: #FFF; }
		}
	}
}

@media(max-width: $screen-xs-max) {
	.pages-wrapper { @include transition(right, 200ms, ease-in); position: relative; right: 0; background-color: #FFF; }
	body { background-color: #ff983c;
		&.mobile-nav-active { overflow-x: hidden;
			.pages-wrapper { right: calc(100% - 20px); }
		}
	}
}
.mobile-nav-trigger { display: block; float: right; font-size: 26px; line-height: 40px; color: #FFF;
	&:hover, &:focus { outline: 0; color: #FFF; }
	&:active { color: $brand-primary; }
	@media(min-width: $screen-sm-min) { display: none; }
}
.mobile-nav { position: absolute; width: 100%; height: 100%; padding: 10px; padding-top: 70px; text-align: right;
	a { color: #FFF; }
	.app-nav-mobile { margin-top: 15px;
		li { margin-bottom: 10px; }
	}
	@media(min-width: $screen-sm-min) { display: none; }
}

.pages-cover-home { background-image: url(<%= asset_path 'pages_home_cover.jpg' %>); }

.pages-cover-home-caption { color: #FFF; padding: 100px 55px;
	@media(max-width: $screen-sm-max) { padding: 80px 10px; }
	img { height: 80px;
		@media(max-width: $screen-sm-max) { height: 70px; }
	}
}
.pages-cover-caption-title { text-transform: uppercase; font-weight: 400;
	@media(max-width: $screen-sm-max) { font-size: 31px; }
}
.pages-cover-caption-text { font-weight: 300; font-size: 18px; margin: 30px 0;
	@media(max-width: $screen-sm-max) { font-size: 16px; }
}

.app-try-button { height: 46px;
	&>:first-child { border-top-left-radius: 3px; border-bottom-left-radius: 3px; }
	&>:last-child { border-top-right-radius: 3px; border-bottom-right-radius: 3px; }
	a:first-of-type { color: inherit; background-color: #000; padding: 0 30px; text-transform: uppercase; font-weight: 300; height: 100%; float: left; line-height: 46px; font-size: 16px;
		@media(max-width: $screen-sm-max) { font-size: 14px; padding: 0 20px; }
		&:focus, &:hover { text-decoration: none; }
	}
	a:not(:first-of-type) { font-size: 25px; float: left; line-height: 46px; color: #fff; background-color: #5c5c5c; padding: 0 15px;
		&+a { background-color: #8e8e8e; }
	}
}

.round-btn { position: absolute; z-index: 99; bottom: -25px; left: calc(50% - 25px); display: inline-block; background-color: #FFF; border-radius: 50%; width: 50px; height: 50px; line-height: 51px; text-align: center; font-size: 30px; color: #ffa04c; box-shadow: 0.5px 0.5px 0px 0px #9e9e9e;
	&:hover, &:focus { color: #ffa04c; text-decoration: none; }
	&:active { box-shadow: none; }
	&.article-plus { position: initial; margin-left: 115px; left: initial; bottom: initial; line-height: 50px; }
}

.icon-round-orange { background-image: url(<%= asset_path 'icons-round-orange.png' %>);  width: 60px; height: 60px; display: inline-block; background-size: cover;
	&.search { background-position: 0 -60px; }
	&.pointer { background-position: 0 -120px; height: 61px; }
	&.bubble { background-position: 0 -181px; height: 61px; }
	&.price-tag { background-position: 0 -243px; }
}

section { padding-top: 50px; padding-bottom: 50px; }
.section-title { text-align: center; font-weight: 400; text-transform: uppercase;
	&.text-bold { font-weight: 500; }
}
.section-subtitle { font-weight: 400; text-align: center; font-size: 16px; margin-top: 10px; margin-bottom: 60px; }
h2.section-subtitle { font-size: 22px; }


.list-round-orange { font-size: 18px;
	@media(max-width: $screen-sm-max) { font-size: 16px; }
	&>li { height: 90px;
		&>.vertical-align:first-of-type { float: left; margin: 0 30px; }
	}
}

.tilebox { background-color: #f3f3f3; padding: 10px; margin: 30px 0; text-align: center;
	a { color: inherit; display: block;
		&:hover, &:focus { text-decoration: none; }
	}
}
.tilebox-image { width: 100%; height: auto; }
.tilebox-title { font-weight: 400; font-size: 26px; max-width: 400px; margin: 30px auto 20px;
	@media(max-width: $screen-sm-max) { font-size: 18px; }
	em { font-weight: 900; }
}
.tilebox-btn { display: inline-block; background-color: #ff983c; color: #FFF; padding: 10px 40px; font-size: 18px; margin-bottom: 20px; }

.stores { text-align: center; margin-bottom: 40px;
	img {height: 80px;width: auto;
		@media(max-width: $screen-sm-max) { height: 70px; }
	}
	a+a { margin-left: 60px; }
}


footer { background-color: #000; padding: 60px 0 0;
	.brand { float: left; margin-top: -20px;
		img { height: 70px; width: auto; }
	}
}

.footer-legend { background-color: #000; color: #fff; text-align: center; font-size: .7em; font-weight: 300; padding: 25px 0; margin-top: 120px;
	>p { margin: 0; }
	img { height: 3.2em; margin-left: 5px; }
	span { margin-right: 10px; }
	@media(max-width: $screen-xs-max) {
		span { margin-right: 0; display: block; margin-bottom: 10px; }
	}
}


.pack { color: #fff;
	a { color: inherit; }
	a:focus { outline: none; }
	a:hover, a:focus { text-decoration: none; }
}
.pack-header { border: 1px solid; padding: 13px 18px 10px; margin-bottom: 5px;
	h4 { margin: 0; font-weight: 400; line-height: 1; }
	h2 { margin: 2px 0 0; font-size: 32px; line-height: 1; }
	small { color: inherit; font-size: 50%; }
}
.pack-details { @extend .list-unstyled; margin-bottom: 0;
	&>li { padding: 18px; border: 1px solid; border-bottom: none;
		&>span:last-child { float: right; }
	}
}
.pack-actions { border: 1px solid; padding: 30px 0; text-align: center;
	span { font-size: 20px; padding: 8px 50px; }
}

.pack-primary { color: #ff983c;
	.pack-header, .pack-actions { background-color: #FFF; border-color: transparent; }
	.pack-details { background-color: #fff;
		&>li { border-color: transparent; border-top: 1px solid;
			&:first-child { border-top: 1px solid transparent; }
		}
	}
	.pack-actions { border-top: 1px solid; }
}

.article { max-width: 825px; margin-bottom: 50px;
	&>a { color: #000; }
	&>a:focus { outline: none; }
	&>a:focus, &>a:hover { text-decoration: none; }
}
.article-image { padding-left: 115px;
	img { width: 100%; height: auto; }
}
.article-container { padding-left: 115px; position: relative; }
.article-slap { position: absolute; left: 0; top: 0; background-color: #fff; width: 115px; padding: 15px 30px 20px; text-transform: uppercase; font-weight: 900; line-height: 1.1em; font-size: 18px;
	&>span { display: block; }
}
.article-body { background-color: #FFF; padding: 20px 40px 40px;
	.btn { font-size: 12px; padding: 10px 30px; text-transform: uppercase; }
}
.article-title { margin-top: 0; margin-bottom: 20px; text-transform: uppercase; max-width: 400px; }
.article-text { font-weight: 300; margin-bottom: 30px; }

.article-detail-image { position: relative; padding: 210px 0 60px; color: #fff;
	&:before {content: ' ';position: absolute;left: 0;top: 0;width: 100%;height: 100%;background-color: rgba(0, 0, 0, 0.5);}
}
.article-detail-title { position: relative; text-transform: uppercase; max-width: 825px;
	h1 { font-size: 45px; 
		@media(max-width: $screen-sm-max) { font-size: 35px; }
	}
	h4 { font-size: 24px; 
		@media(max-width: $screen-sm-max) { font-size: 20px; }
	}
}
.article-detail { max-width: 825px; padding-bottom: 50px;
	&>img { width: 100%; height: auto; }
	p {font-weight: 300;margin-bottom: 60px;}
}

.modal-login {
	.modal-content { background-color: #fd9747; }
	.modal-body { text-align: center; padding: 90px;
		&>img { width: 270px; margin: 0 0 50px; }
		&>a:last-child { color: #FFF; text-decoration: underline; font-size: 18px; margin-top: 50px; display: inline-block; font-weight: 300; }
	}
	.form-actions { margin-top: 30px;
		.btn-block + .btn-block { margin-top: 10px; }
	}
	.form-group { margin-bottom: 10px; }
	.form-actions .btn { font-size: 18px; }
	.form-control, .btn {border-radius: 4px;}
}