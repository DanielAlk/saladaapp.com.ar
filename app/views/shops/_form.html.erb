    </div>
  </div>
  <div class="form-group">
    <%= f.label :condition, 'Estado', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <%= f.select :condition, [ ['Ocupado', :occupied], ['Vacío', :empty], ['En reparación', :repairs] ], { include_blank: 'Estado del puesto' }, class: 'form-control', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, 'Imágen', class: 'control-label col-sm-3' %>
    <div class="col-sm-9">
      <input type="file" id="imageFile" accept="image/*">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-9 col-sm-offset-3">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
