<% content_for :extra_js do %>
  $('.new_shop, .edit_shop').validate();
  changeHandler.call($('.select-control').get(0));
<% end %>

<script type="text/javascript">
  console.log(JSON.parse('<%= escape_javascript @shop.to_json.html_safe %>'));
  var changeHandler = function(e) {
    var $select = $(this);
    var val = Number($select.val());
    var $targets = $('.' + $select.attr('id'));
    $targets.hide().each(function() {
      var $target = $(this);
      var valuesToMatch = $target.data('control-val');
      if (valuesToMatch.indexOf(val) > -1) $target.show();
    });
  };
  $(document).on('change', '.select-control', changeHandler);
  $(document).on('submit', '.new_shop, .edit_shop', function(e) {
    e.preventDefault();
    var form = this;
    var $form = $(form);
    var files = $('#imageFile').get(0).files;
    var file = files[0];
    if (files && file) {
      var reader = new FileReader();
      reader.onload = function(e) {
        $('<input>', { type: 'hidden', name: 'shop[image]', value: e.target.result }).appendTo($form);
        $('<input>', { type: 'hidden', name: 'shop[image_file_name]', value: file.name }).appendTo($form);
        form.submit();
      };
      reader.readAsDataURL(file);
    } else form.submit();
  });
</script>

<%= form_for(@shop) do |f| %>
