<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head prefix="og: http://ogp.me/ns#">
	<%= render 'layouts/head' %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper" class="in">
		<%= render 'layouts/navigation' %>
		<div id="page-wrapper">
			<%= yield %>
		</div>
	</div>
	<%# render 'layouts/footer' %>
	<script>
		$(function() {
			<% if notice.present? %>
				Utils.notification('notice', '<%= notice.html_safe %>');
			<% end %>
			<% if alert.present? %>
				Utils.notification('alert', '<%= alert.html_safe %>');
			<% end %>
			<%= content_for :extra_js %>
		});
	</script>
</body>
</html>
