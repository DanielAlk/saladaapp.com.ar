<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Payable</th>
      <th>Transaction amount</th>
      <th>Mercadopago preference</th>
      <th>Payment info</th>
      <th>Init point</th>
      <th>Collection</th>
      <th>Collection status</th>
      <th>Collection status detail</th>
      <th>Preference</th>
      <th>Payment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user %></td>
        <td><%= payment.payable %></td>
        <td><%= payment.transaction_amount %></td>
        <td><%= payment.mercadopago_preference %></td>
        <td><%= payment.payment_info %></td>
        <td><%= payment.init_point %></td>
        <td><%= payment.collection_id %></td>
        <td><%= payment.collection_status %></td>
        <td><%= payment.collection_status_detail %></td>
        <td><%= payment.preference_id %></td>
        <td><%= payment.payment_type %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

