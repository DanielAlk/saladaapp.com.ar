<% content_for :extra_js do %>
	Utils.radios();
	$('#contact_form').validate({
		errorPlacement: function(error, element) {
			if (element.attr('type') == 'radio') error.appendTo(element.closest('div.radio'));
			else error.insertAfter(element);
		}
	});
<% end %>

