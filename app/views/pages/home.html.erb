<section class="relative bg-orange" id="contact">
	<div class="container">
		<h2 class="section-title c-white mb-xs-40">Contacto</h2>
		<div class="row">
			<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
				<%= form_tag '#', class: 'form-lg', id: 'contact_form' do %>
					<div class="form-group">
						<input type="text" class="form-control" id="contact_fullname" name="contact[fullname]" placeholder="Nombre y apellido" required>
				  </div>
				  <div class="form-group">
				  	<input type="email" class="form-control" id="contact_email" name="contact[email]" placeholder="Email" required>
				  </div>
				  <div class="form-group">
				  	<input type="tel" class="form-control" id="contact_phone" name="contact[phone]" placeholder="Teléfono">
				  </div>
				  <div class="radio">
				    <label class="radio-inline">
				      <input type="radio" id="contact_user_role" name="contact[user_role]" data-msg-required="Elige una opción" required> Soy comerciante
				    </label>
				    <label class="radio-inline">
				    	<input type="radio" id="contact_user_role" name="contact[user_role]" required> Soy visitante
				    </label>
				  </div>
				  <div class="form-group">
				  	<textarea class="form-control" id="contact_text" name="contact[text]" rows="4" placeholder="Observaciones" required></textarea>
				  </div>
				  <div class="text-center mt-xs-20 mb-xs-20 mt-md-40 mb-md-40">
				  	<button type="submit" class="btn btn-default">Enviar</button>
				  </div>
				<% end %>
			</div>
		</div>
		<%= link_to root_path + '#download', class: 'round-btn scroll-hash' do %>
			<i class="fa fa-angle-down" aria-hidden="true"></i>
		<% end %>
	</div>
</section>
