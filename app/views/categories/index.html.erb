<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Categorías
      <%= link_to 'Agregar categoría', new_category_path, class: 'btn btn-primary pull-right' %>
    </h1>
    <table class="table table-striped table-controls" width="100%">
      <thead>
        <tr>
          <th>Título</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td>
              <div class="btn-group btn-group-xs" role="group" aria-label="...">
                <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, category, class: 'btn btn-default' %>
                <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_category_path(category), class: 'btn btn-info' %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>