<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Categoría
			<%= link_to 'Agregar categoría', new_category_path, class: 'btn btn-primary pull-right' %>
		</h1>
		<div class="panel panel-default">
			<div class="panel-heading">
				<%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_category_path(@category), class: 'btn btn-xs btn-info' %>
				<%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, @category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
				<strong><%= @category.title %></strong>
        <%= link_to categories_path, class: 'btn btn-xs btn-warning pull-right' do %>
          <i class="fa fa-arrow-left" aria-hidden="true"></i> Volver
        <% end %>
			</div>
		</div>
	</div>
</div>