<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Datos de Usuario</h1>
		<div class="panel panel-default">
			<div class="panel-heading">
				<%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_user_path(@user), class: 'btn btn-xs btn-info' %>
				<strong><%= @user.name %></strong>
			</div>
			<div class="panel-body">
				<div class="pull-right">
					<%= image_tag @user.image, class: 'round-200' %>
				</div>
				<p><strong>Nombre:</strong> <%= @user.name %></p>
				<p><strong>Email:</strong> <%= @user.email %></p>
				<p><strong>Genero:</strong> <%= User.genders.key(@user.gender.try(:to_sym)) %></p>
				<p><strong>Fecha de nacimiento:</strong> <%= @user.birthday %></p>
				<p><strong>Documento:</strong> <%= @user.id_type %> <%= @user.id_number %></p>
				<p><strong>Localidad:</strong> <%= @user.locality %></p>
				<p><strong>Dirección:</strong> <%= @user.address %></p>
				<p><strong>Número de teléfono:</strong> <%= @user.phone_number %></p>
				<p><strong>Rol:</strong> <%= User.roles.key(@user.role.try(:to_sym)) %></p>
				<p><strong>Ionic User Id:</strong> <%= @user.io_uid %></p>
			</div>
		</div>
	</div>
</div>